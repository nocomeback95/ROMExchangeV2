<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_layout">

    <TextView
            android:text="Western Grace Blueprint"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>
    <TextView
            style="@style/ExchangeItem"
            android:text="Global"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/global_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="15dp"/>
    <TextView
            android:text="449,630 Z"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/global_price"
            app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/global_percent" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>
    <TextView
            android:text="+349.6%"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/global_percent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:background="@drawable/price_inc_bg"/>
    <TextView
            android:text="SEA"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sea_title" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/global_title"
            android:layout_marginTop="15dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"/>
    <TextView
            android:text="100,000 Z"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/sea_price"
            app:layout_constraintTop_toBottomOf="@+id/global_price" android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/sea_percent" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="0%"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/sea_percent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" app:layout_constraintTop_toBottomOf="@+id/global_percent"
            android:layout_marginTop="15dp" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:background="@drawable/price_dec_bg"/>

</android.support.constraint.ConstraintLayout>